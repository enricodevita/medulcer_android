<?xml version="1.0" encoding="UTF-8" ?>
    <widget id="it.zerounorabbit.medulcer" version="2.0.0" versionCode="2"  xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Woumed Android</name>
    <description>
        Woumed App
    </description>
    <author href="http://www.01rabbit.it" email="info@01rabbit.it">
        01Rabbit di De Vita Enrico
    </author>

	<preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
<!--	<preference name="useBrowserHistory" value="false" /> -->
	<preference name="loglevel" value="DEBUG" />
	<preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="ErrorUrl" value="error.html" />
    <preference name="LoadingDialog" value="Caricamento Woumed, devi essere connesso per eseguire l'applicazione" />
    <preference name="LoadingPageDialog" value="Caricamento Dati..." />
    <preference name="android-windowSoftInputMode" value="adjustPan" />
	<preference name="SplashScreenDelay" value="3000"/>

